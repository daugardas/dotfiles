// -*- mode: jsonc -*-
{
  "layer": "top", // Waybar at top layer
  // "position": "bottom", // Waybar position (top|bottom|left|right)
  "height": 24, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 0, // Gaps between modules (4px)
  // "output": ["HDMI-A-1"], // comment out this line to show on all outputs
  // Choose the order of the modules
  "modules-left": [
    "hyprland/submap",
    "hyprland/workspaces",
    "custom/mediaplayer",
    "hyprland/window"
  ],
  "modules-center": [],
  "image": {
    "path": "/tmp/waybar-mediaplayer-art",
    "size": 32,
    "signal": 4,
    "on-click": "feh --auto-zoom --borderless --title 'feh-float' /tmp/waybar-mediaplayer-art"
  },

  "custom/mediaplayer": {
    "exec": "$HOME/.config/waybar/waybar-mediaplayer/.venv/bin/python3.13  $HOME/.config/waybar/waybar-mediaplayer/src/mediaplayer monitor",
    "return-type": "json",
    "format": "{}",
    "on-click": "$HOME/.config/waybar/.venv/bin/python $HOME/.config/waybar/waybar-mediaplayer/src/mediaplayer play-pause",
    "on-scroll-up": "$HOME/.config/waybar/.venv/bin/python $HOME/.config/waybar/waybar-mediaplayer/src/mediaplayer next",
    "on-scroll-down": "$HOME/.config/waybar/.venv/bin/python $HOME/.config/waybar/waybar-mediaplayer/src/mediaplayer previous",
    "min-length": 20,
    "max-length": 20
  },

  "hyprland/workspaces": {
    "format": "{name}",
    "format-icons": {
      "active": "ïƒˆ",
      "default": "ïƒˆ",
      "persistent": "ïƒˆ"
    },
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "all-outputs": false,
    "persistent_workspaces": {
      "*": 5
    }
  },
  "hyprland/window": {
    "separate-outputs": false,
    "icon": true,
    "icon-size": 24,
    "format": "{initialClass}: {title}",
    "rewrite": {
      "(.*) - .*": "$1"
    },
    "max-length": 40
  },
  "hyprland/submap": {
    "format": "{}"
  },

  "modules-right": [
    // "wireplumber",
    "idle_inhibitor",
    // "bluetooth",
    "pulseaudio",
    "power-profiles-daemon",
    "cpu",
    "memory",
    "temperature",
    "backlight",
    "battery",
    "clock",
    "keyboard-state",
    "network",
    "custom/externalip",
    "hyprland/language",
    "tray",
    "custom/power"
  ],
  "hyprland/language": {
    "format": "{}",
    "format-en": "US",
    "format-lt": "LT"
    // "keyboard-name": "at-translated-set-2-keyboard"
  },
  "wireplumber": {
    "format": "{volume}%",
    "format-muted": "ï€¦",
    "on-click": "flatpak run com.saivert.pwvucontrol"
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ï€£",
      "unlocked": "ï‚œ"
    }
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ï®",
      "deactivated": "ï°"
    }
  },
  "tray": {
    // "icon-size": 21,
    "spacing": 10
  },
  "clock": {
    // "timezone": "America/New_York",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },
  "cpu": {
    "format": "{usage}% ï‹›",
    "tooltip": true
  },
  "memory": {
    "format": "{}% ïƒ‰"
  },
  "temperature": {
    // "thermal-zone": 2,
    // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    // "format-critical": "{temperatureC}Â°C {icon}",
    "format": "{temperatureC}Â°C {icon}",
    "format-icons": ["ï«", "ï‹‰", "ï©"]
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "{percent}% {icon}",
    "format-icons": ["ğŸŒ‘", "ğŸŒ˜", "ğŸŒ—", "ğŸŒ–", "ğŸŒ•"]
  },
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% ï—§",
    "format-plugged": "{capacity}% ï‡¦",
    "format-alt": "{time} {icon}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
  },
  "battery#bat2": {
    "bat": "BAT2"
  },
  "power-profiles-daemon": {
    "format": "Power: {icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ïƒ§",
      "performance": "ïƒ§",
      "balanced": "ï‰",
      "power-saver": "ï¬"
    }
  },
  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    "format-wifi": "{essid} ({signalStrength}%) ï‡«",
    "format-ethernet": "{ipaddr}/{cidr} ï–",
    "tooltip-format": "{ifname} via {gwaddr} ï–",
    "format-linked": "{ifname} (No IP) ï–",
    "format-disconnected": "Disconnected âš ",
    "format-alt": "{ifname}: {ipaddr}/{cidr}"
  },

  "custom/externalip": {
    // "format": "Click to show public IP",
    "exec-on-event": true,
    "exec": "cat $HOME/.config/waybar/custom/external-ip/currentip",
    "on-click": "bash $HOME/.config/waybar/custom/external-ip/custom-externalip.sh",
    "on-click-right": "bash $HOME/.config/waybar/custom/external-ip/hide-ip.sh",
    "interval": "once",
    "tooltip": false,
    "return-type": "json"
  },

  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{volume}% {icon} {format_source}",
    "format-bluetooth": "{volume}% {icon}ïŠ” {format_source}",
    "format-bluetooth-muted": "ïš© {icon}ïŠ” {format_source}",
    "format-muted": "ïš© {format_source}",
    "format-source": "{volume}% ï„°",
    "format-source-muted": "ï„±",
    "format-icons": {
      "headphone": "ï€¥",
      "hands-free": "ï–",
      "headset": "ï–",
      "phone": "ï‚•",
      "portable": "ï‚•",
      "car": "ï†¹",
      "default": ["ï€¦", "ï€§", "ï€¨"]
    },
    "on-click": "flatpak run com.saivert.pwvucontrol"
  },
  "custom/power": {
    "format": "ó°¥",
    "on-click": "wlogout",
    "tooltip": "Open Power Menu"
    // "interval": ""
  }
}
